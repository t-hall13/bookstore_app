<section>
  <header class="page-header">
    <% if @authors.empty? %>
        <h3>No Authors Defined</h3>
    <% else %>
        <h3>All Authors</h3>
    <% end %>
  </header>
  <div id="authors-list">
      <%  @authors.each do |author| %>
        <div class="titles well col-md-12">
              <%= link_to author.full_name, admin_author_path(author.id) %>
        </div>
      <% end %>
  </div>
    <br>
    <div id="new-author-link">
      <%= link_to "Add New Author", new_admin_author_path, class: "btn btn-success btn-lg" %>
    </div>
</section>