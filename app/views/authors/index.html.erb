
<div class="row">
  <div id="new-author-link" class="col-md-12">
    <%= link_to "Add New Author", new_author_path, class: "btn btn-success btn-lg" %>
  </div>
</div>

<div class="row">
  <div class="page-header col-md-12">
    <h1>All Authors</h1>
  </div>
</div>

<div class="row">
  <div id="authors-list">
    <% @authors.each do |author| %>
      <div class="titles well col-md-12">
        <%= author.full_name %>
      </div>
    <% end %>
  </div> 
</div>